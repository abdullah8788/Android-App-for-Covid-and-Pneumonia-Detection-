<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="16dp">

    <!-- TextView to display precautions -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precautions"
        android:layout_marginLeft="113dp"
        android:textSize="24sp"
        android:fontFamily="@font/nexabold"
        android:gravity="center"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvPrecautions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/nexabold"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:padding="8dp"/>

    <ImageView
        android:id="@+id/ivPrecautions"
        android:layout_width="wrap_content"
        android:layout_height="276dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pneumonia" />


    <!--        tools:text="COVID Precautions:\n\n- Wear a mask to cover your nose and mouth.\n- Practice frequent handwashing with soap and water.\n- Maintain social distancing of at least 6 feet from others.\n- Avoid large gatherings and crowded places.\n- Follow guidelines and recommendations from local health authorities." />-->
>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank You!"
        android:layout_marginLeft="113dp"
        android:textSize="24sp"
        android:fontFamily="@font/nexabold"
        android:gravity="center"
        android:textColor="?attr/colorError"
        android:textAlignment="center"
        android:textStyle="bold" />
</LinearLayout>
