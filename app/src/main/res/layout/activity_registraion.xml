<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#611510"
    tools:context=".registraion">

    <ImageView
        android:id="@+id/reglogo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="-6dp"
        android:layout_weight="5"
        android:src="@drawable/logs" />

    <TextView
        android:id="@+id/text"
        android:text="Sign Up"
        android:textSize="23sp"
        android:textColor="@color/white"

        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_marginBottom="3dp"
        android:layout_height="0dp"
        android:layout_weight="0.8"

        android:fontFamily="@font/nexabold" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="12dp"
        android:paddingStart="12dp"
        android:drawableStart="@drawable/baseline_person_24"
        android:background="@drawable/edittext"
        android:hint="username"
        android:focusableInTouchMode="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/nexalight"
        android:drawablePadding="12dp" />




    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="12dp"
        android:paddingStart="12dp"
        android:drawableStart="@drawable/baseline_alternate_email_24"
        android:background="@drawable/edittext"
        android:hint="Email"
        android:focusableInTouchMode="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/nexalight"
        android:drawablePadding="12dp" />



    <EditText
        android:id="@+id/passwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="12dp"
        android:paddingStart="12dp"
        android:drawableStart="@drawable/baseline_vpn_key_24"
        android:background="@drawable/edittext"
        android:hint="Password"
        android:focusableInTouchMode="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/nexalight"
        android:drawablePadding="12dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bntlogin"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:backgroundTint="#CC3030"
            android:fontFamily="@font/nexabold"
            android:text="Sign up"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:id="@+id/btnregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:text="Already have an account?"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
         android:autoLink="web"
    android:clickable="true"
        android:fontFamily="@font/nexabold"
    android:textSize="16sp"
    android:textStyle="bold" />


    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:visibility="invisible" />



</LinearLayout>